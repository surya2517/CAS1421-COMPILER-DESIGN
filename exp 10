#include <stdio.h>
#include <string.h>

int main() {
    char nonTerminal[10], prod1[100], prod2[100];
    printf("Enter Non-terminal: ");
    scanf("%s", nonTerminal);

    printf("Enter two productions (for simplicity):\n");
    scanf("%s %s", prod1, prod2);

    int i = 0;
    while (prod1[i] && prod2[i] && prod1[i] == prod2[i]) i++;

    if (i > 0) {
        printf("%s -> ", nonTerminal);
        for (int j = 0; j < i; j++) printf("%c", prod1[j]);
        printf("%s'\n", nonTerminal);

        printf("%s' -> %s | %s\n", nonTerminal, prod1 + i, prod2 + i);
    } else {
        printf("%s -> %s | %s\n", nonTerminal, prod1, prod2);
    }

    return 0;
}
