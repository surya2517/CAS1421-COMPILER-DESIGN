#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *file = fopen("test.txt", "r");
    char ch;
    int chars = 0, words = 0, lines = 0, in_word = 0;

    if (!file) {
        printf("Error: Could not open file.\n");
        return 1;
    }

    while ((ch = fgetc(file)) != EOF) {
        chars++; // Every character counts

        if (ch == '\n') {
            lines++; // New line found
        }

        if (isspace(ch)) {
            in_word = 0; // Hit a space, tab, or newline
        } else if (in_word == 0) {
            in_word = 1; // Start of a new word
            words++;
        }
    }

    fclose(file);

    printf("Characters: %d\n", chars);
    printf("Words:      %d\n", words);
    printf("Lines:      %d\n", lines);

    return 0;
}
